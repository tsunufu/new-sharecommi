<!DOCTYPE html>
<html>
  <head>
    <title>NewSharecommi</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    	<nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #393073;"><!--navの背景色を指定-->
		  <div class="container-fluid">
		    <%= link_to "SHARE COMMI", root_path, class: "navbar-brand" %>
		    <!--ハンバーガーメニュー-->
		    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
		      <span class="navbar-toggler-icon"></span>
		    </button>
		    <!--ここまで-->
		    <div class="collapse navbar-collapse justify-content-end " id="navbarNav">
		      <ul class="navbar-nav">
		      	<% if logged_in? %>
			        <li class="nav-item">
			          <%= link_to "Home", posts_path, class: "nav-link" %>
			        </li>
			        <li class="nav-item">
			          <%= link_to "New Post", new_posts_path, class: "nav-link" %>
			        </li>
			        <li class="nav-item">
			           <%= link_to "My Page", root_path, class: "nav-link" %>
			        </li>
			        <li class="nav-item">
			           <%= link_to "Sign Out", logout_path, method: :delete, class: "nav-link" %>
			        </li>
		        <% else %>
			        <li class="nav-item">
			           <%= link_to "Sign In", login_path, class: "nav-link" %>
			        </li>
			        <li class="nav-item">
			           <%= link_to "Sign Up", new_user_path, class: "nav-link" %>
			        </li>
			     <% end %>
		      </ul>
		    </div>
		  </div>
		</nav>
      <div class="container">
        <%= yield %>
      </div>
  </body>
</html>
